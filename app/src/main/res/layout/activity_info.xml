<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/about_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="56dp"
                android:padding="4dp"
                android:text="@string/about"
                android:textColor="@color/dashboard_red"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/about_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/about_title"
                android:padding="4dp"
                android:text="@string/about_body_text"
                android:textColor="@color/dashboard_dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tutorial_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/about_body"
                android:padding="4dp"
                android:text="@string/how_to_use"
                android:textColor="@color/dashboard_red"
                android:textSize="24sp" />

                <TextView
                    android:id="@+id/tutorial_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/tutorial_title"
                    android:padding="4dp"
                    android:text="@string/controls"
                    android:textColor="@color/dashboard_dark"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/parking_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tutorial_body"
                    app:srcCompat="@drawable/ic_parking_15_colour" />

                <TextView
                    android:id="@+id/parking_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bike_text"
                    android:layout_alignTop="@+id/parking_img"
                    android:layout_toEndOf="@+id/parking_img"
                    android:layout_toRightOf="@+id/parking_img"
                    android:padding="4dp"
                    android:text="@string/parking_text"
                    android:textColor="@color/dashboard_dark"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/bike_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parking_img"
                    android:layout_marginTop="4dp"
                    app:srcCompat="@drawable/ic_bicycle_share_15_colour_alt" />

                <TextView
                    android:id="@+id/bike_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/bike_img"
                    android:layout_toEndOf="@+id/bike_img"
                    android:layout_toRightOf="@+id/bike_img"
                    android:padding="4dp"
                    android:text="@string/bike_text"
                    android:textColor="@color/dashboard_dark"
                    android:textSize="14sp" />

            <ImageView
                android:id="@+id/cluster_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bike_img"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@+id/bike_text"
                android:layout_toStartOf="@+id/bike_text"
                app:srcCompat="@drawable/ic_cluster" />

            <TextView
                android:id="@+id/cluster_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cluster_img"
                android:layout_toEndOf="@+id/cluster_img"
                android:layout_toRightOf="@+id/cluster_img"
                android:padding="4dp"
                android:text="@string/cluster_text"
                android:textColor="@color/dashboard_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/attrib_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cluster_text"
                android:padding="4dp"
                android:text="@string/attrib_title"
                android:textColor="@color/dashboard_red"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/attrib_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/attrib_title"
                android:padding="4dp"
                android:text="@string/attrib_info"
                android:autoLink="web"
                android:textColor="@color/dashboard_dark"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/attrib_body"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_sfi_logo_2016__master_colour" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>